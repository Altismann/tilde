---
const res = await fetch("https://login.tilde.rocks/wp-json/wp/v2/posts?categories=4");
const posts = await res.json();
import Navigation from '../components/Navigation.astro';import Navigation from '../components/Nav.astro';
---

<Navigation />

<section>

  
    <h3>TV</h3>
    
  </div>

{
  posts.map((post) => (
      <h2 set:html={post.title.rendered} />
      <p set:html={post.content.rendered} />

  ))
}
